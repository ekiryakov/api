{% extends 'base.html.twig' %}

{% block title %}Vendor register{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <v-container fluid>
        <vendor-register form="{{ form_errors(registrationForm)|json_encode() }}" csrf_token="{{ csrf_token('vendor_registration_form') }}"></vendor-register>
    </v-container>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block alert %}
    {% if registrationForm.errors is defined and registrationForm.errors|length > 0 %}
        <v-alert type="error">{{ registrationForm.errors[0] }}</v-alert>
    {% endif %}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Vendor register{% endblock %}

{% block body %}
    <v-container fluid>
        <vendor-register csrf_token="{{ csrf_token('vendor_registration_form') }}"></vendor-register>
    </v-container>
    {{ registrationForm|json_encode() }}
{% endblock %}

{% block alert %}
    {% if registrationForm.errors is defined and registrationForm.errors|length > 0 %}
        <v-alert type="error">{{ registrationForm.errors[0] }}</v-alert>
    {% endif %}
{% endblock %}
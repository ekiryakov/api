{% extends 'base.html.twig' %}

{% block title %}Vendor register{% endblock %}

{% block body %}
    <v-container fluid>
        <vendor-register csrf_token="{{ csrf_token('vendor_registration_form') }}"></vendor-register>
    </v-container>
{% endblock %}

{% block alert %}
    {% if errors|length > 0 %}
        <v-alert v-if="this.alert" dismissible type="error" transition="scale-transition">
            {{ errors[0].message }}
            <v-btn class="float-right" @click="this.alert = false">
                <v-icon>mdi-close</v-icon>
            </v-btn>
        </v-alert>
    {% endif %}
{% endblock %}
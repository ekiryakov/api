{% extends 'base.html.twig' %}

{% block title %}Customer register{% endblock %}

{% block body %}
    <v-container fluid>
        <customer-register token="{{ csrf_token('registration') }}"></customer-register>
    </v-container>
{% endblock %}

{% block alert %}
    {% if registrationForm.errors is defined and registrationForm.errors|length > 0 %}
        <v-alert type="error">{{ registrationForm.errors[0] }}</v-alert>
    {% endif %}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Customer register{% endblock %}

{% block body %}
    <v-container fluid>
        <customer-register _token="{{ registrationForm._token|json_encode() }}"></customer-register>
    </v-container>
{% endblock %}

{% block alert %}
    {% if registrationForm.errors|length > 0 %}
        <v-alert type="error">{{ registrationForm.errors[0] }}</v-alert>
    {% endif %}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Customer register{% endblock %}

{% block body %}
    <v-container fluid>
        <customer-register csrf_token="{{ csrf_token('customer_registration_form') }}"></customer-register>
    </v-container>
{% endblock %}

{% block alert %}
    {% if errors|length > 0 %}
        <v-alert v-model="this.alert" dismissible type="error" transition="scale-transition">
            {{ errors[0].message }}
        </v-alert>
    {% endif %}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<v-container>

    {% block page_title %}Log in!{% endblock %}

    {% if error %}
        {% block alert %}
            <v-alert type="error">$[ error.messageKey|trans(error.messageData, 'security') ]$</v-alert>
        {% endblock %}
    {% endif %}

    <Login :last_username="$[ last_username ]$"
           :csrf_token="$[ csrf_token('authenticate') ]$">
    </Login>
</v-container>
{% endblock %}
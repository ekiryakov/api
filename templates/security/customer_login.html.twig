{% extends 'base.html.twig' %}

{% block title %}Customer login{% endblock %}

{% block body %}
    <v-container fluid>
        <customer-login csrf_token="{{ csrf_token('authenticate') }}"></customer-login>
    </v-container>
{% endblock %}

{% block alert %}
    {% if error %}
        <v-alert v-model="this.alert" dismissible type="error" transition="scale-transition">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </v-alert>
    {% endif %}
{% endblock %}

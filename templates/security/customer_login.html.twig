{% extends 'base.html.twig' %}

{% block title %}Auth{% endblock %}

{% block body %}
<v-container fluid>

    <CustomerLogin last_username="{{ last_username }}"
           csrf_token="{{ csrf_token('authenticate') }}">
    </CustomerLogin>

</v-container>
{% endblock %}

{% block alert %}
    {% if error %}
        <v-alert type="error">{{ error.messageKey|trans(error.messageData, 'security') }}</v-alert>
    {% endif %}
{% endblock %}

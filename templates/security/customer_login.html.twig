{% extends 'base.html.twig' %}

{% block title %}Customer login{% endblock %}

{% block body %}
    <v-container fluid>
        <customer-login csrf_token="{{ csrf_token('authenticate') }}"></customer-login>
    </v-container>
{% endblock %}

{% block alert %}
    {% if error %}
        <v-alert type="error">{{ error.messageKey|trans(error.messageData, 'security') }}</v-alert>
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Landing page{% endblock %}

{% block banner %}
    <iframe src="https://www.youtube.com/embed/vgtReuY02JA?autoplay=1&playsinline=1&showinfo=0"
            style="border:none"
            :width="this.width"
            :height="this.height">
    </iframe>
{% endblock %}

{% block body %}
    <v-container id="introducing" fluid>
        <v-row>
            <v-col md="6">
                <p class="font-weight-light">
                    Light weight text.
                </p>
            </v-col>
        </v-row>
    </v-container>
    <v-container id="principles" fluid>
        <user-tabs></user-tabs>
    </v-container>
    <v-container id="examples" fluid>
        <v-row>
            <v-col md="6">
                <List data="{{ offers|serialize(format = 'json') }}"></List>
            </v-col>
            <v-col md="6">
                <p class="font-weight-light">
                    Light weight text.
                </p>
            </v-col>
        </v-row>
    </v-container>
    <v-container id="partners" fluid></v-container>
    <v-container id="faq" fluid></v-container>
{% endblock %}
<script>
    import List from "../../assets/templates/offer/List";
    export default {
        components: {List}
    }
</script>
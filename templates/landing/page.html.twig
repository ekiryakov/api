{% extends 'base.html.twig' %}

{% block title %}Landing page{% endblock %}

{% block banner %}
    <iframe src="https://www.youtube.com/embed/vgtReuY02JA?autoplay=1&playsinline=1&showinfo=0"
            style="border:none"
            :width="this.width"
            :height="this.height">
    </iframe>
{% endblock %}

{% block body %}
    <v-container id="introducing" fluid>
        <v-row>
            <v-col md="6">
                <p class="font-weight-light">
                    Light weight text.
                </p>
            </v-col>
        </v-row>
    </v-container>
    <v-container id="principles" fluid>
        <user-tabs></user-tabs>
    </v-container>
    <v-container id="examples" fluid>
        <v-row>
            <v-col md="6">
                <List data="{{ offers|serialize(format = 'json') }}"></List>
            </v-col>
            <v-col md="6">
                <p class="font-weight-light">
                    Light weight text.
                </p>
            </v-col>
        </v-row>
    </v-container>
    <v-container id="partners" fluid>
        <Partners data="{{ vendors|serialize(format = 'json') }}"></Partners>
    </v-container>
    <v-container id="faq" fluid>
        <v-row justify="center">
            <v-expansion-panels accordion>
                <v-expansion-panel v-for="(item,i) in 5" :key="i">
                    <v-expansion-panel-header>Item</v-expansion-panel-header>
                    <v-expansion-panel-content>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </v-expansion-panel-content>
                </v-expansion-panel>
            </v-expansion-panels>
        </v-row>
    </v-container>
{% endblock %}
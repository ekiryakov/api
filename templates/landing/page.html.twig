{% extends 'base.html.twig' %}

{% block title %}Landing page{% endblock %}

{% block body %}
    <v-container id="introducing" data-title="introducing" fluid>
        <v-row>
            <v-col md="6">
                <p class="font-weight-light">
                    Light weight text.
                </p>
                <v-btn class="mb-1 mr-1" href="{{ path('offer_index') }}" color="primary" elevation="0" rounded x-large>All offers</v-btn>
                <v-btn class="mb-1" href="{{ path('vendor_register') }}" outlined rounded x-large>Became partner</v-btn>
            </v-col>
        </v-row>
    </v-container>
    <v-container id="partners" data-title="partners" fluid>
        <Partners data="{{ vendors|serialize(format = 'json') }}"></Partners>
    </v-container>
    <v-container id="principles" data-title="principles" fluid class="px-0">
        <user-tabs vendor_register="{{ path('vendor_register') }}"
                   customer_register="{{ path('customer_register') }}">
        </user-tabs>
    </v-container>
    <v-container id="examples" data-title="examples" fluid>
        <set-list data="{{ sets|serialize(format = 'json') }}"></set-list>
    </v-container>
    <v-container id="faq" data-title="faq" fluid>
        <v-row justify="center">
            <v-expansion-panels accordion class="ma-3">
                <v-expansion-panel v-for="(item,i) in 5" :key="i">
                    <v-expansion-panel-header>Item</v-expansion-panel-header>
                    <v-expansion-panel-content>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                    </v-expansion-panel-content>
                </v-expansion-panel>
            </v-expansion-panels>
        </v-row>
    </v-container>
{% endblock %}
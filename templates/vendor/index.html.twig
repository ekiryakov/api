{% extends 'base.html.twig' %}

{% block title %}Vendor index{% endblock %}

{% block body %}
<v-container>
    <h1>Vendor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Logo</th>
                <th>Name</th>
                <th>About</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>{{ vendor.logo }}</td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.about }}</td>
                <td>
                    <a href="{{ path('vendor_show', {'id': vendor.id}) }}">show</a>
                    <a href="{{ path('vendor_edit', {'id': vendor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vendor_new') }}">Create new</a>
</v-container>
{% endblock %}

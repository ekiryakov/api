{% extends 'base.html.twig' %}

{% block title %}Offer index{% endblock %}

{% block body %}
<v-container class="pa-0" fluid>
    {% if categories %}
        <Categories data="{{ categories|serialize(format = 'json') }}"></Categories>
    {% endif %}
    <OfferList data="{{ offers|serialize(format = 'json') }}"></OfferList>
    <v-fab-transition>
        <v-btn href="/offer/new" fab large dark absolute bottom right>
            <v-icon>mdi-plus</v-icon>
        </v-btn>
    </v-fab-transition>
</v-container>
{% endblock %}
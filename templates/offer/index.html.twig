{% extends 'base.html.twig' %}

{% block title %}Offer index{% endblock %}

{% block body %}
<v-container>
    <v-list two-line>
        <v-list-item-group active-class="pink--text" multiple>
        {% for offer in offers %}
            <Offer data="{{ offer|serialize(format = 'json') }}"
                show="{{ path('offer_show', {'id': offer.id}) }}"
                edit="{{ path('offer_edit', {'id': offer.id}) }}">
            </Offer>
            {% if loop.last == false %}
                <v-divider :key="{{ loop.index }}"></v-divider>
            {% endif %}
        {% endfor %}
        </v-list-item-group>
    </v-list>
    <v-fab-transition>
        <v-btn href="{{ path('offer_new') }}" fab large dark bottom right>
            <v-icon>mdi-plus</v-icon>
        </v-btn>
    </v-fab-transition>
</v-container>
{% endblock %}